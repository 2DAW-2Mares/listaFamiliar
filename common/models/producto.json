{
  "name": "Producto",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "nombre": {
      "type": "string",
      "required": true
    },
    "comprar": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "listaFamiliar": {
      "type": "belongsTo",
      "model": "ListaFamiliar",
      "foreignKey": "listaFamiliarId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "updateAll"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "miembroAlgunaLista",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "miembroLista",
      "permission": "ALLOW",
      "property": "comprado"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "miembroAlgunaLista",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "miembroLista",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "prototype.comprado": {
      "accepts": [
        {
          "arg": "contexto",
          "type": "object",
          "required": true,
          "description": "El objeto del contexto",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": [
        {
          "arg": "productoModificado",
          "type": "object",
          "root": true,
          "description": "El producto modificado"
        }
      ],
      "description": "negar el atributo comprar del producto indicado, es decir, si anteriormente estaba a false se pondr√° a true y viceversa",
      "http": [
        {
          "path": "/comprado",
          "verb": "put"
        }
      ]
    }
  }
}
